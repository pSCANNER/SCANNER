    <camel:routeContext id="TestRouteContext">
                     
        <!-- test route 1: initiates http client POST request (ECHO) using an xml file as the message body -->
   
        <camel:route id="testRoute1">
            <camel:from uri="file://etc/samples?fileName=SimpleMapSample.xml&amp;noop=true"/> 
            <camel:setHeader headerName="CamelHttpMethod">
                <camel:constant>POST</camel:constant>
            </camel:setHeader> 
            <camel:setHeader headerName="Content-Type">
                <camel:constant>application/xml</camel:constant>
            </camel:setHeader>
            <camel:setHeader headerName="id">
                <camel:constant>ace18f85-1294-41bb-aa0a-7ef13acb2528</camel:constant>
            </camel:setHeader>            
            <camel:setHeader headerName="targets">
                <camel:constant>http://localhost:8888/scanner/dataset/example/echo,http://localhost:8887/scanner/dataset/example/echo,http://localhost:8886/scanner/dataset/example/echo,http://localhost:8885/scanner/dataset/example/echo</camel:constant>
            </camel:setHeader>      
            <camel:to uri="http4://{{master.address}}:{{master.port}}/{{master.appDomain}}/{{master.appContext}}/example/echo"/>                                                    
            <camel:to uri="stream:out"/>
        </camel:route>

