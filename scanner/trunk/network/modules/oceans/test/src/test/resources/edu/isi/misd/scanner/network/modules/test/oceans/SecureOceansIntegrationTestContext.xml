<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:camel="http://camel.apache.org/schema/spring"      
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"       
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd    
       http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">
   
    <import resource="classpath:edu/isi/misd/scanner/network/base/test/TestCamelContext.xml"/>

    <bean id="OceansLogisticRegressionAggregateProcessor"
          class="edu.isi.misd.scanner.network.modules.master.processors.oceans.OceansLogisticRegressionAggregateProcessor"/>
        
    <bean id="OceansLogisticRegressionProcessor"
          class="edu.isi.misd.scanner.network.modules.worker.processors.oceans.OceansLogisticRegressionProcessor"/>  
    
    <camel:camelContext id="OceansIntegrationTestContext" errorHandlerRef="testErrorHandler">
                
        <camel:propertyPlaceholder id="properties" 
                                   location="classpath:edu/isi/misd/scanner/network/base/test/test.properties"/>    
                
        <camel:packageScan>
            <camel:package>edu.isi.misd.scanner.network.modules.master</camel:package>            
            <camel:package>edu.isi.misd.scanner.network.modules.worker</camel:package>
            <camel:excludes>**.*Excluded*</camel:excludes>
            <camel:includes>**.*</camel:includes>
        </camel:packageScan>

        <camel:route>
            <camel:from uri="jetty:https://{{master.address}}:{{master.port}}/{{master.appDomain}}/{{master.appContext}}/oceans/lr?sslContextParametersRef=sslContextParametersMaster&amp;sessionSupport=false&amp;matchOnUriPrefix=true"/>          
            <camel:to uri="direct:edu.isi.misd.scanner.network.modules.master.routes.oceans.OceansLogisticRegressionRoute"/>
            <camel:to uri="mock:result"/>
        </camel:route>
                                        
        <camel:route>
            <camel:from uri="jetty:https://{{worker.address}}:{{worker.port}}/{{worker.appDomain}}/{{worker.appContext}}/oceans/lr?sslContextParametersRef=sslContextParametersWorker&amp;sessionSupport=false&amp;matchOnUriPrefix=true"/>
            <camel:to uri="direct:edu.isi.misd.scanner.network.modules.worker.routes.oceans.OceansLogisticRegressionRoute"/>                       
        </camel:route>

        <camel:route>
            <camel:from uri="jetty:https://{{worker.address}}:{{worker.port2}}/{{worker.appDomain}}/{{worker.appContext}}/oceans/lr?sslContextParametersRef=sslContextParametersWorker&amp;sessionSupport=false&amp;matchOnUriPrefix=true"/>             
            <camel:to uri="direct:edu.isi.misd.scanner.network.modules.worker.routes.oceans.OceansLogisticRegressionRoute"/>                          
        </camel:route>        
                                                                                                                                                                                                                                                                                 
        <camel:route>
            <camel:from uri="jetty:https://{{worker.address}}:{{worker.port3}}/{{worker.appDomain}}/{{worker.appContext}}/oceans/lr?sslContextParametersRef=sslContextParametersWorker&amp;sessionSupport=false&amp;matchOnUriPrefix=true"/>             
            <camel:to uri="direct:edu.isi.misd.scanner.network.modules.worker.routes.oceans.OceansLogisticRegressionRoute"/>                                 
        </camel:route>
        
        <camel:route>
            <camel:from uri="jetty:https://{{worker.address}}:{{worker.port4}}/{{worker.appDomain}}/{{worker.appContext}}/oceans/lr?sslContextParametersRef=sslContextParametersWorker&amp;sessionSupport=false&amp;matchOnUriPrefix=true"/>             
            <camel:to uri="direct:edu.isi.misd.scanner.network.modules.worker.routes.oceans.OceansLogisticRegressionRoute"/>                                   
        </camel:route>        
                                                    
    </camel:camelContext>
    
</beans>

