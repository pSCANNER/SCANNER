<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:camel="http://camel.apache.org/schema/spring"      
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"       
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd    
       http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">
   
    <import resource="classpath:edu/isi/misd/scanner/network/base/test/TestCamelContext.xml"/>
        
    <bean id="PrepToResearchProcessor"
          class="edu.isi.misd.scanner.network.modules.worker.processors.ptr.PrepToResearchProcessor"/>  
    
    <bean id="masterSecurityHandler" parent="baseSecurityHandler"/>    
    <bean id="worker1SecurityHandler" parent="baseSecurityHandler"/>     
    <bean id="worker2SecurityHandler" parent="baseSecurityHandler"/>
    <bean id="worker3SecurityHandler" parent="baseSecurityHandler"/>
    <bean id="worker4SecurityHandler" parent="baseSecurityHandler"/>
                    
    <camel:camelContext id="PrepToResearchIntegrationTestContext" errorHandlerRef="testErrorHandler">
                
        <camel:propertyPlaceholder id="properties" 
                                   location="classpath:edu/isi/misd/scanner/network/base/test/test-master.properties,classpath:edu/isi/misd/scanner/network/base/test/test-worker.properties"/>                
        <camel:packageScan>
            <camel:package>edu.isi.misd.scanner.network.modules.master</camel:package>            
            <camel:package>edu.isi.misd.scanner.network.modules.worker</camel:package>
            <camel:excludes>**.*Excluded*</camel:excludes>
            <camel:includes>**.*</camel:includes>
        </camel:packageScan>

        <camel:route streamCache="true">
            <camel:from uri="jetty:https://{{master.address}}:{{master.ssl.port}}/{{master.appDomain}}/{{master.appContext}}/ptr?handlers=masterSecurityHandler&amp;sslContextParametersRef=sslContextParametersMaster&amp;sessionSupport=false&amp;matchOnUriPrefix=true"/>                    
            <camel:log message="Input Message:\n\n${body}\n"/>
            <camel:to uri="direct:edu.isi.misd.scanner.network.modules.master.routes.ptr.PrepToResearchRoute"/>
            <camel:log message="Output Message:\n\n${body}\n"/>             
            <camel:to uri="mock:result"/>
        </camel:route>
                                        
        <camel:route>
            <camel:from uri="jetty:https://{{worker.address}}:{{worker.ssl.port}}/{{worker.appDomain}}/{{worker.appContext}}/ptr?handlers=worker1SecurityHandler&amp;sslContextParametersRef=sslContextParametersWorker&amp;sessionSupport=false&amp;matchOnUriPrefix=true"/>
            <camel:to uri="direct:edu.isi.misd.scanner.network.modules.worker.routes.ptr.PrepToResearchRoute"/>                       
        </camel:route>

        <camel:route>
            <camel:from uri="jetty:https://{{worker.address}}:{{worker.ssl.port2}}/{{worker.appDomain}}/{{worker.appContext}}/ptr?handlers=worker2SecurityHandler&amp;sslContextParametersRef=sslContextParametersWorker&amp;sessionSupport=false&amp;matchOnUriPrefix=true"/>             
            <camel:to uri="direct:edu.isi.misd.scanner.network.modules.worker.routes.ptr.PrepToResearchRoute"/>                          
        </camel:route>        
                                                                                                                                                                                                                                                                                 
        <camel:route>
            <camel:from uri="jetty:https://{{worker.address}}:{{worker.ssl.port3}}/{{worker.appDomain}}/{{worker.appContext}}/ptr?handlers=worker3SecurityHandler&amp;sslContextParametersRef=sslContextParametersWorker&amp;sessionSupport=false&amp;matchOnUriPrefix=true"/>             
            <camel:to uri="direct:edu.isi.misd.scanner.network.modules.worker.routes.ptr.PrepToResearchRoute"/>                                 
        </camel:route>
        
        <camel:route>
            <camel:from uri="jetty:https://{{worker.address}}:{{worker.ssl.port4}}/{{worker.appDomain}}/{{worker.appContext}}/ptr?handlers=worker4SecurityHandler&amp;sslContextParametersRef=sslContextParametersWorker&amp;sessionSupport=false&amp;matchOnUriPrefix=true"/>             
            <camel:to uri="direct:edu.isi.misd.scanner.network.modules.worker.routes.ptr.PrepToResearchRoute"/>                                   
        </camel:route>        
                                                    
    </camel:camelContext>
    
</beans>

