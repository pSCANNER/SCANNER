<?xml version="1.0"?>
<xsd:schema version="1.0"
            targetNamespace="http://scanner.misd.isi.edu/network/types/base"
            xmlns:tns="http://scanner.misd.isi.edu/network/types/base" 
            xmlns:xsd="http://www.w3.org/2001/XMLSchema"
            elementFormDefault="qualified">                   

    <xsd:element name="SimpleMap">
        <xsd:annotation>
            <xsd:documentation>
                A simple list of key-value pairs for storing arbitrary data.
            </xsd:documentation>
        </xsd:annotation>          
        <xsd:complexType>
            <xsd:sequence>
                <xsd:element ref="tns:SimpleMapData" 
                             minOccurs="0" 
                             maxOccurs="unbounded"/>
            </xsd:sequence>
        </xsd:complexType>
    </xsd:element>
       
    <xsd:element name="SimpleMapData">
        <xsd:annotation>
            <xsd:documentation>
                A single key-value pair object
            </xsd:documentation>
        </xsd:annotation>                 
        <xsd:complexType>
            <xsd:sequence>
                <xsd:element name="key" type="xsd:string"/>
                <xsd:element name="value" type="xsd:string"/>
            </xsd:sequence>
        </xsd:complexType>
    </xsd:element> 
   
    <xsd:element name="SimpleMapArray">
        <xsd:annotation>
            <xsd:documentation>
                An array of BaseMap objects
            </xsd:documentation>
        </xsd:annotation>          
        <xsd:complexType>
            <xsd:sequence>
                <xsd:element ref="tns:SimpleMap" 
                             minOccurs="0" 
                             maxOccurs="unbounded"/>
            </xsd:sequence>
        </xsd:complexType>
    </xsd:element>
                       
</xsd:schema>
